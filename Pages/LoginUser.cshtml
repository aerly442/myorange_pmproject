@page
@model myorange_pmproject.Pages.LoginUserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="myorange_pmproject.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <style>
        /* 自定义样式以居中登录框 */
        .d-flex.justify-content-center.align-items-center.vh-100 {
            height: 100vh; /* 使用视口高度（Viewport Height）的100% */
        }

        .login-container {
            max-width: 480px; /* 限制登录框的最大宽度 */
            width: 360px;
            margin: auto; /* 加上这个可以使得登录框在水平方向上居中，但由于我们在外部容器上使用了align-items-center，它也会垂直居中 */
        }

        body {
            background-color: #f0f2f5; /* 更改背景颜色，以便更清楚地看到居中效果 */
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="login-container">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">请登录</h5>
                    
                       
                     
                    <form  method="post">
                        <!-- 表单内容 -->
                        <div class="mb-3">
                            <label for="email" class="form-label">账号</label>
                            <input type="text" class="form-control" name="UserName" id="email" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">密码</label>
                            <input type="password" name="Password" class="form-control" id="password">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                               记住我
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="text text-danger">@(this.ViewData["ShowError"])</label>                          
                        </div>
                    
                        <button type="submit" class="btn btn-primary btn-block">登录</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>







